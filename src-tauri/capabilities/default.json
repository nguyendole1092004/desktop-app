{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Cấp quyền đầy đủ cho ứng dụng POS Offline",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "dialog:default",
    "log:default",
    "shell:default",
    "sql:allow-load",
    "sql:allow-execute",
    "sql:allow-select",
    "fs:default",
    "fs:allow-copy-file",
    "fs:allow-app-read-recursive",
    "fs:allow-app-write-recursive",
    {
      "identifier": "fs:allow-read",
      "allow": [
        { "path": "$APPDATA/**" },
        { "path": "$DESKTOP/**" },
        { "path": "$DOWNLOADS/**" }
      ]
    },
    {
      "identifier": "fs:allow-write",
      "allow": [
        { "path": "$APPDATA/**" },
        { "path": "$DESKTOP/**" },
        { "path": "$DOWNLOADS/**" }
      ]
    }
  ]
}